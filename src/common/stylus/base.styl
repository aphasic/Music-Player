@import "variable.styl"

body, html
  line-height: 1
  font-family: 'PingFang SC', 'STHeitiSC-Light', 'Helvetica-Light', arial, sans-serif, 'Droid Sans Fallback'
  user-select: none
  -webkit-tap-highlight-color: transparent
  background: $color-background
  color: $color-text
  height: 100%
  .h-horizon-list-wrap
    overflow: hidden
    .list-item
      float: left
  .h-list-title
    height: 65px
    line-height: 65px
    text-align: center
    font-size: $font-size-medium
    color: $color-theme
  .h-ellipse-1-line
    overflow: hidden
    text-overflow: ellipsis
    white-space: nowrap
  .h-ellipse-2-line
    display: -webkit-box
    -webkit-box-orient: vertical
    -webkit-line-clamp: 2
    overflow: hidden
  .h-media-middle
    display: flex
    align-items: center
    .icon
      width: 60px
      height: 60px
      flex: 0 0 60px
      margin-right: 20px
      img
        width: 100%
        height: 100%
    .text
      flex: 1
      line-height: 20px
      overflow: hidden
      font-size: $font-size-medium

  .h-full-page
    position: fixed
    width: 100%
    height: 100%
    top: 0
    left: 0
    z-index: 50
    background: $color-background
  .h-align-center
    text-align: center
